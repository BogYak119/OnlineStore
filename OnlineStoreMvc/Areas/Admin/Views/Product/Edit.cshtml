@model ProductVM

<form method="post" asp-action="Edit">
    <input asp-for="ProductDTO.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="ProductDTO.Name"></label>
            <input asp-for="ProductDTO.Name" class="form-control" />
            <span asp-validation-for="ProductDTO.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ProductDTO.Price"></label>
            <input asp-for="ProductDTO.Price" class="form-control" />
            <span asp-validation-for="ProductDTO.Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ProductDTO.Discount"></label>
            <input asp-for="ProductDTO.Discount" class="form-control" />
            <span asp-validation-for="ProductDTO.Discount" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ProductDTO.Description"></label>
            <input asp-for="ProductDTO.Description" class="form-control" />
            <span asp-validation-for="ProductDTO.Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ProductDTO.ImageUrl"></label>
            <input asp-for="ProductDTO.ImageUrl" class="form-control" />
            <span asp-validation-for="ProductDTO.ImageUrl" class="text-danger"></span>
        </div>
        @*<div class="mb-3 col-6">
            <label asp-for="ProductDTO.Subcategory.CategoryId"></label>
            <select asp-for="ProductDTO.Subcategory.Category.Id" asp-items="@Model.CategoryList" class="form-select">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="ProductDTO.Subcategory.Category.Id" class="text-danger"></span>
        </div>*@
        <div class="mb-3 col-6">
            <label asp-for="ProductDTO.SubcategoryId"></label>
            <select asp-for="ProductDTO.SubcategoryId" asp-items="@Model.SubcategoryList" class="form-select">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="ProductDTO.SubcategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="ProductDTO.ManufacturerId"></label>
            <select asp-for="ProductDTO.ManufacturerId" asp-items="@Model.ManufacturerList" class="form-select">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="ProductDTO.ManufacturerId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}