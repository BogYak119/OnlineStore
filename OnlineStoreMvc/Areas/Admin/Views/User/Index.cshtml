@model List<UserDTO>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    User Name
                </th>
                <th>
                    User Login
                </th>
                <th>
                    User ID
                </th>
                <th>
                    User Roles
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td width="50%">
                        @user.Name;
                    </td>
                    <td width="50%">
                        @user.UserName;
                    </td>
                    <td width="50%">
                        @user.ID;
                    </td>
                    <td width="50%">
                        @user.Role;
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="User" asp-action="Edit" asp-route-id=@user.ID><i class="bi bi-pencil-square"></i>Edit</a>
                        </div>
                        <div class="w-75 btn-group">
                            <a asp-controller="User" asp-action="Delete" asp-route-id=@user.ID><i class="bi bi-trash"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
