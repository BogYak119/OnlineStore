@model RegistrationRequestDTO

<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Register User</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for=@Model.UserName type="text" class="form-control" placeholder="Username..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for=@Model.Name type="text" class="form-control" placeholder="Name..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for=@Model.Password type="text" class="form-control" placeholder="Password..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for=@Model.Role type="text" class="form-control" placeholder="Role..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn-success" value="Submit">Register User</button>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }